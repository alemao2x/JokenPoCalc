<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="209dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedra"
            android:id="@+id/btnPedraP1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Papel"
            android:id="@+id/btnPapelP1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tesoura"
            android:id="@+id/btnTesouraP1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jokeypo!"
        android:id="@+id/btnResult"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtPlayer"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:text="Escolha jogador"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtViewPC"
        android:layout_width="329dp"
        android:layout_height="39dp"
        android:text="Escolha celular"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Resultado"
        android:textSize="30sp" />

</LinearLayout>